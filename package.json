{
  "name": "apimockerserver",
  "version": "0.0.1",
  "description": "APIMocker Server",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "bin": {
    "apimocker_server": "./dist/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/brainsandbeards/APIMockerServer.git"
  },
  "author": "Brains & Beards",
  "license": "SEE LICENSE IN LICENSE.md",
  "bugs": {
    "url": "https://gitlab.com/brainsandbeards/APIMockerServer/issues"
  },
  "homepage": "https://gitlab.com/brainsandbeards/APIMockerServer#README",
  "private": true,
  "preferGlobal": true,
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/node": "^10.5.2",
    "concurrently": "^3.6.0",
    "jest": "^23.4.1",
    "nodemon": "^1.18.2",
    "ts-jest": "^23.0.1",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "tslint-immutable": "^4.6.0",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "@types/normalizr": "^2.0.18",
    "commander": "^2.16.0",
    "express": "^4.16.3",
    "normalizr": "^3.2.4"
  }
}
