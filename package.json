{
  "name": "apimockerserver",
  "version": "0.0.1",
  "description": "APIMocker Server",
  "scripts": {
    "start": "yarn run serve",
    "build": "yarn run build-ts && yarn run tslint",
    "serve": "node dist/runner.js",
    "watch-node": "nodemon dist/runner.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "yarn run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "yarn run build && yarn run watch-debug",
    "serve-debug": "nodemon --inspect dist/runner.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run serve-debug\"",
    "check-all": "yarn tslint && yarn build-ts && yarn test",
    "generate-cert": "./utils/generate-cert.sh"
  },
  "bin": {
    "apimocker_server": "./dist/runner.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/brainsandbeards/APIMockerServer.git"
  },
  "author": "Brains & Beards",
  "license": "SEE LICENSE IN LICENSE.md",
  "bugs": {
    "url": "https://gitlab.com/brainsandbeards/APIMockerServer/issues"
  },
  "homepage": "https://gitlab.com/brainsandbeards/APIMockerServer#README",
  "private": true,
  "preferGlobal": true,
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/node": "^10.5.2",
    "concurrently": "^3.6.0",
    "jest": "^23.4.1",
    "nodemon": "^1.18.2",
    "ts-jest": "^23.0.1",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "tslint-immutable": "^4.6.0",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "@types/lodash": "^4.14.116",
    "@types/normalizr": "^2.0.18",
    "@types/zeromq": "^4.6.1",
    "commander": "^2.16.0",
    "express": "^4.16.3",
    "lodash": "^4.17.10",
    "normalizr": "^3.2.4",
    "zeromq": "^4.6.0"
  }
}
