{
    "defaultSeverity": "error",
    "extends": ["tslint:recommended", "tslint-immutable"],
    "rules": {
      "align": [true],
      "arrow-parens": false,
      "ban": false,
      "class-name": true,
      "comment-format": [true, "check-space"],
      "curly": false,
      "eofline": false,
      "forin": true,
      "indent": [true, "spaces"],
      "interface-name": [false],
      "no-empty-interface": [false],
      "jsdoc-format": true,
      "jsx-boolean-value": false,
      "jsx-curly-spacing": false,
      "jsx-no-multiline-js": false,
      "label-position": true,
      "max-line-length": [true, 150],
      "member-access": false,
      "no-any": false,
      "no-arg": true,
      "no-bitwise": true,
      // "no-class": true, // no-this and no-class is a next level stateless mind blow: https://redux.js.org/basics/usage-with-react
      "no-conditional-assignment": true,
      "no-consecutive-blank-lines": [true],
      "no-console": [true, "debug", "info", "log", "time", "timeEnd", "trace"],
      "no-construct": true,
      "no-debugger": true,
      "no-delete": true,
      "no-duplicate-variable": true,
      "no-empty": true,
      "no-eval": true,
      "no-inferrable-types": [false],
      "no-internal-module": true,
      "no-invalid-this": [true, "check-function-in-method"],
      "no-let": [true, "ignore-local"],
      "no-null-keyword": false,
      "no-parameter-reassignment": true,
      "no-parameter-properties": false,
      "no-require-imports": false,
      "no-shadowed-variable": true,
      "no-string-literal": true,
      "no-switch-case-fall-through": true,
      "no-this-assignment": [true, { "allow-destructuring": true }],
      "no-this": false, // no-this and no-class is a next level stateless mind blow: https://redux.js.org/basics/usage-with-react
      "no-trailing-whitespace": true,
      "no-unused-expression": true,
      "no-var-keyword": true,
      "no-var-requires": true,
      "object-literal-sort-keys": false,
      "one-line": [true, "check-open-brace", "check-catch", "check-else", "check-finally", "check-whitespace"],
      "ordered-imports": false,
      "quotemark": false,
      "radix": true,
      "readonly-array": [true, "ignore-local", { "ignore-prefix": "mutable" }],
      "readonly-keyword": [false, { "ignore-prefix": "mutable" }],
      "semicolon": false,
      "switch-default": true,
      "trailing-comma": false,
      "triple-equals": [true, "allow-undefined-check"],
      "typedef": false,
      "typedef-whitespace": [
        true,
        {
          "call-signature": "nospace",
          "index-signature": "nospace",
          "parameter": "nospace",
          "property-declaration": "nospace",
          "variable-declaration": "nospace"
        },
        {
          "call-signature": "space",
          "index-signature": "space",
          "parameter": "space",
          "property-declaration": "space",
          "variable-declaration": "space"
        }
      ],
      "variable-name": [true, "check-format", "allow-leading-underscore", "allow-pascal-case", "ban-keywords"],
      "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-separator", "check-type"]
    }
  }
  